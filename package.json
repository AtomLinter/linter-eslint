{
  "name": "linter-eslint",
  "main": "./lib/main",
  "version": "7.1.1",
  "description": "Lint JavaScript on the fly, using ESLint",
  "repository": "https://github.com/AtomLinter/linter-eslint.git",
  "license": "MIT",
  "engines": {
    "atom": ">0.50.0"
  },
  "scripts": {
    "lint": "eslint .",
    "watch": "ucompiler watch",
    "compile": "ucompiler go"
  },
  "dependencies": {
    "atom-linter": "^4.3.4",
    "atom-package-deps": "^4.0.1",
    "consistent-path": "^2.0.1",
    "escape-html": "^1.0.3",
    "eslint": "^2.3.0",
    "process-communication": "^1.1.0",
    "resolve-env": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-import": "^1.0.0",
    "eslint-plugin-react": "^4.0.0",
    "ucompiler": "^3.0.1",
    "ucompiler-plugin-babel": "^3.0.0",
    "ucompiler-plugin-newline": "^3.0.0",
    "babel-preset-steelbrain": "^2.0.1"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "rules": {
      "no-empty": 0,
      "no-console": 0,
      "no-new": 0,
      "no-extra-semi": 1,
      "semi": [
        2,
        "never"
      ],
      "func-names": 0,
      "strict": [
        0,
        "never"
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "comma-dangle": 0
    },
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "globals": {
      "atom": "true"
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
