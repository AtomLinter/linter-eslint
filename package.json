{
  "name": "linter-eslint",
  "main": "./lib/main",
  "activationCommands": [],
  "version": "6.0.0",
  "description": "Lint JavaScript on the fly, using ESLint",
  "repository": "https://github.com/AtomLinter/linter-eslint.git",
  "license": "MIT",
  "engines": {
    "atom": ">0.50.0"
  },
  "scripts": {
    "lint": "eslint .",
    "watch": "ucompiler watch src",
    "compile": "npm run prepublish",
    "prepublish": "ucompiler go src"
  },
  "dependencies": {
    "atom-linter": "^4.3.4",
    "atom-package-deps": "^3.0.7",
    "consistent-path": "^1.0.3",
    "escape-html": "^1.0.3",
    "eslint": "^1.10.3",
    "process-communication": "^1.1.0",
    "resolve-env": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-plugin-import": "^0.12.1",
    "eslint-plugin-react": "^3.16.1",
    "ucompiler": "^2.1.1",
    "ucompiler-plugin-babel": "^1.0.3",
    "babel-preset-steelbrain": "^1.0.1"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "rules": {
      "no-empty": 0,
      "no-console": 0,
      "no-new": 0,
      "no-extra-semi": 1,
      "semi": [
        2,
        "never"
      ],
      "func-names": 0,
      "strict": [
        0,
        "never"
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "comma-dangle": 0
    },
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "globals": {
      "atom": "true"
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
